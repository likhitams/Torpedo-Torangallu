RewriteEngine On 
#This bit rewrites your host name to include www 
RewriteCond %{HTTP_HOST} !^www\.poojapeople\.com [NC]
RewriteRule ^(.*)$ http://www.poojapeople.com/pooja_manage/$1 [R=301,NC,L]

#This bit does the codeigniter magic 
RewriteRule ^(poojaapplication) - [F,L]
RewriteCond %{REQUEST_FILENAME} !-f 
RewriteCond %{REQUEST_FILENAME} !-d 
RewriteRule ^(.*)$ /index.php/$1 [L]